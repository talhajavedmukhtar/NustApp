<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nust.orientationapp.addInterestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/interestName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name for Interest Beacon"/>
        <EditText
            android:id="@+id/interestType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Interest Type"/>
        <EditText
            android:id="@+id/interestBackground"
            android:inputType="textLongMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Give some background"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/button5"
        android:layout_gravity="right|bottom"
        android:onClick="saveInterestBeacon"
        android:background="#01477a"
        android:textColor="#ffffff"/>

</FrameLayout>